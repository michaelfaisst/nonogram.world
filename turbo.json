{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    },
    "globalEnv": [
        "CI",
        "NODE_ENV",
        "DB_URL",
        "DB_HOST",
        "DB_USER",
        "DB_PASSWORD",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",

        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",

        "EMAIL_HOST",
        "EMAIL_PORT",
        "EMAIL_USER",
        "EMAIL_PASSWORD",
        "VERCEL_URL"
    ]
}
